@{
    ViewData["Title"] = "Admin Dashboard";
}

<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 fw-bold">Admin Dashboard</h1>
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                <i class="fa fa-home me-1"></i>Back to Home
            </a>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-shopping-bag text-primary me-3" style="font-size: 2rem;"></i>
                            <h5 class="mb-0">Orders Management</h5>
                        </div>
                        <p class="text-muted mb-3">Manage all customer orders, accept or decline them, and track order status.</p>
                        <a href="@Url.Action("Orders", "Admin")" class="btn btn-primary">
                            <i class="fa fa-list me-1"></i>View Orders
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-box text-success me-3" style="font-size: 2rem;"></i>
                            <h5 class="mb-0">Products Management</h5>
                        </div>
                        <p class="text-muted mb-3">Add, edit, and manage products in your store inventory.</p>
                        <a href="@Url.Action("Index", "Product")" class="btn btn-success">
                            <i class="fa fa-plus me-1"></i>Manage Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>