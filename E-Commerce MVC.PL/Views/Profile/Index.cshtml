@model E_Commerce.Data.DataOrEntity.User
@{
    ViewData["Title"] = "MyAccount";
}

<section class="py-5">
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar removed -->
            <!-- Form -->
            <div class="col-md-9 offset-md-1">
                <div class="top-bar d-flex justify-content-end align-items-center py-3" style="font-size:1rem;">
                    <span class="welcome-text" style="color:#6c757d;">Welcome!</span>
                    <span class="user-name ms-2" style="color:#000;font-weight:bold;">@((Model.FirstName ?? Model.Name)?.Split(' ')[0])</span>
                </div>
                <div class="form-container bg-white p-4 rounded-3 shadow-sm">
                    <h5 class="mb-4" style="color:#dc3545;font-size:1.5rem;font-weight:bold;">Edit Your Profile</h5>
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">@ViewBag.Success</div>
                    }
                    <form asp-action="Index" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="row">
                            @if (Model.FirstName != null || Model.LastName != null)
                            {
                                <div class="form-group col-md-6">
                                    <label for="firstName">First Name</label>
                                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name" value="@Model.FirstName">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="lastName">Last Name</label>
                                    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name" value="@Model.LastName">
                                </div>
                            }
                            else
                            {
                                <div class="form-group col-md-12">
                                    <label for="name">Full Name</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Full Name" value="@Model.Name">
                                </div>
                            }
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="@Model.Email">
                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>
                            <input type="text" class="form-control" id="address" name="address" placeholder="Address" value="@Model.Address">
                        </div>
                        <hr>
                        <h6 class="mb-3">Password Changes</h6>
                        <div class="form-group">
                            <input type="password" class="form-control" id="currentPassword" name="currentPassword" placeholder="Current Password">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="New Password">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword" placeholder="Confirm New Password">
                        </div>
                        <div class="mt-4">
                            <button type="submit" class="btn btn-danger px-4 py-2" style="background:#e94560; border:none;">
                                <i class="fa fa-save me-2"></i>Save Changes
                            </button>
                            <a href="@Url.Action("MyOrders", "Profile")" class="btn btn-outline-primary ms-2">
                                <i class="fa fa-shopping-bag me-2"></i>My Orders
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        body {
            background-color: #fff;
        }

        .sidebar {
            background-color: #fff;
            padding: 80px 0 0 60px !important;
            border-right: none;
        }

        .sidebar-heading {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .nav-item a {
            color: #343a40;
            padding: 8px 0 0 25px;
            display: block;
            text-decoration: none;
        }

            .nav-item a:hover {
                color: #007bff;
            }

        .form-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .form-container h5 {
                color: #dc3545;
                font-size: 1.5rem;
                margin-bottom: 20px;
                font-weight: bold;
            }

        .form-group label {
            font-size: 0.9rem;
            color: #495057;
            font-weight: bold;
        }

        .form-control {
            background-color: #F5F5F5;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            padding: 0.375rem 0.75rem;
            margin-bottom: 15px;
            font-size: 0.9rem;
        }

            .form-control::placeholder {
                color: #6c757d;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-link {
            color: #343a40;
            text-decoration: none;
        }

            .btn-link:hover {
                color: #007bff;
                text-decoration: underline;
            }

        .top-bar .welcome-text {
            color: #6c757d;
        }

        .top-bar .user-name {
            color: #000;
            font-weight: bold;
        }
    </style>
}