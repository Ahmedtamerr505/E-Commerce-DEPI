@using Microsoft.AspNetCore.Mvc.Rendering
@model E_Commerce.Services.Model_View.ProductVM

@{
    ViewData["Title"] = "Create Product";
}

<section class="py-5 min-vh-100 d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7 col-md-9">
                <div class="card shadow-lg border-0 p-4 rounded-4">
                    <div class="card-body">
                        <h2 class="fw-bold mb-4 text-center">Create Product</h2>
                        <form asp-action="Create" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-semibold"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Price" class="form-label fw-semibold"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Discount" class="form-label fw-semibold">Discount (%)</label>
                                <input asp-for="Discount" class="form-control" placeholder="Optional: e.g. 10 for 10% off" min="0" max="100" step="0.01" />
                                <span asp-validation-for="Discount" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-semibold"></label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="StockQuantity" class="form-label fw-semibold"></label>
                                <input asp-for="StockQuantity" class="form-control" />
                                <span asp-validation-for="StockQuantity" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-semibold" for="ProductTypeIds">Types (Select all that apply)</label>
                                <select asp-for="ProductTypeIds" class="form-select" multiple="multiple" id="ProductTypeIds" name="ProductTypeIds">
                                    @foreach (var type in (IEnumerable<dynamic>)ViewBag.Types)
                                    {
                                        <option value="@type.Id">@type.Name</option>
                                    }
                                </select>
                                <small class="form-text text-muted">Hold Ctrl (Windows) or Command (Mac) to select multiple types.</small>
                            </div>
                            <div class="mb-4">
                                <label asp-for="Image" class="form-label fw-semibold"></label>
                                <input asp-for="Image" type="file" class="form-control" />
                                <span asp-validation-for="Image" class="text-danger small"></span>
                            </div>
                            <div class="d-flex justify-content-between gap-2">
                                <button type="submit" class="btn btn-danger px-4">Create</button>
                                <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Styles {
    <style>
        .card {
            background: #fff;
            border-radius: 1.5rem;
            box-shadow: 0 4px 32px rgba(233,69,96,0.10);
        }

        .form-label {
            color: #e94560;
        }

        .btn-danger {
            background: #e94560;
            border: none;
        }

            .btn-danger:hover {
                background: #d12c4a;
            }

        .btn-outline-secondary:hover {
            background: #f5f5f5;
        }
    </style>
}