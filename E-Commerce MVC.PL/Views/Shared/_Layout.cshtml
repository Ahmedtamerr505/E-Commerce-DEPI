    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const navbar = document.getElementById('mainNavbar');
            const promoBar = document.querySelector('.promo-bar');
            const promoBarHeight = promoBar.offsetHeight;

            function onScroll() {
                if (window.scrollY >= promoBarHeight) {
                    navbar.classList.add('sticky-navbar');
                    document.body.classList.add('sticky-padding');
                } else {
                    navbar.classList.remove('sticky-navbar');
                    document.body.classList.remove('sticky-padding');
                }
            }

            window.addEventListener('scroll', onScroll);
        });

        function showToast(message, isSuccess = true) {
            const toast = document.getElementById('cartToast');
            const toastHeader = toast.querySelector('.toast-header');
            const toastBody = toast.querySelector('.toast-body');
            toastBody.textContent = message;
            if (isSuccess) {
                toastHeader.classList.remove('bg-danger');
                toastHeader.classList.add('bg-success');
                toastHeader.querySelector('strong').textContent = 'Success';
            } else {
                toastHeader.classList.remove('bg-success');
                toastHeader.classList.add('bg-danger');
                toastHeader.querySelector('strong').textContent = 'Error';
            }
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
        }

        function addToCart(id, name, price, imageUrl) {
            event.preventDefault();
            event.stopPropagation();
            var token = $('input[name="__RequestVerificationToken"]').val() || '';
            $.ajax({
                url: '/Cart/AddToCart',
                type: 'POST',
                contentType: 'application/json',
                headers: { 'RequestVerificationToken': token },
                data: JSON.stringify({
                    Id: id,
                    Name: name,
                    Price: price,
                    ImageUrl: imageUrl,
                    Quantity: 1
                }),
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, true);
                    } else {
                        showToast(response.message || 'Error adding product to cart', false);
                    }
                },
                error: function() {
                    showToast('Error adding product to cart', false);
                }
            });
        }

        function addToWishlist(id, name, price, imageUrl) {
            $.ajax({
                url: '/Wishlist/AddToWishlist',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    Id: id,
                    Name: name,
                    Price: price,
                    ImageUrl: imageUrl,
                    Quantity: 1
                }),
                success: function(response) {
                    if (response.success) {
                        showToast(response.message, true);
                    } else {
                        showToast(response.message || 'Error adding to wishlist', false);
                    }
                },
                error: function() {
                    showToast('Error adding to wishlist', false);
                }
            });
        }

        // Wishlist heart functionality
        $(document).on('click', '.wishlist-btn', function (e) {
            e.preventDefault();
            e.stopPropagation();
            var $btn = $(this);
            var $icon = $btn.find('i');
            var productId = $btn.data('product-id');
            // Find product details from the card
            var $card = $btn.closest('.flash-card, .product-card');
            var name = $card.find('.fw-bold.mb-1').text().trim();
            var priceText = $card.find('.text-danger.fw-bold').first().text().replace(/[^\d.]/g, '');
            var price = parseFloat(priceText);
            var imageUrl = $card.find('img').attr('src');

            $.ajax({
                url: '/Wishlist/AddToWishlist',
                type: 'POST',
                data: {
                    Id: productId,
                    Name: name,
                    Price: price,
                    ImageUrl: imageUrl,
                    Quantity: 1
                },
                success: function (response) {
                    if (response.success) {
                        $icon.removeClass('fa-regular').addClass('fa-solid').css('color', '#e74c3c');
                        $btn.addClass('active-wishlist-heart');
                        // Optionally show a toast
                        showToast(response.message, true);
                    } else {
                        showToast('Error adding to wishlist', false);
                    }
                },
                error: function () {
                    showToast('Error adding to wishlist', false);
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
