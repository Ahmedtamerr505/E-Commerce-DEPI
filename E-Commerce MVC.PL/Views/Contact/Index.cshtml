@{
    ViewData["Title"] = "Contact";
}

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-white px-0" style="font-size:1.1rem;">
            <li class="breadcrumb-item"><a href="/" style="color:#888; text-decoration:none;">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Contact</li>
        </ol>
    </nav>
    <div class="row g-4">
        <!-- Left Info Card -->
        <div class="col-md-4">
            <div class="bg-white rounded-3 shadow-sm p-4 h-100">
                <div class="mb-4 d-flex align-items-center">
                    <span class="me-3" style="font-size:1.7rem;">
                        <i class="fa fa-phone text-danger"></i>
                    </span>
                    <div>
                        <div class="fw-bold" style="font-size:1.15rem;">Call To Us</div>
                        <div class="text-muted mt-1" style="font-size:1rem;">We are available 24/7, 7 days a week.</div>
                        <div class="mt-1">Phone: +8801611112222</div>
                    </div>
                </div>
                <hr />
                <div class="mt-4 d-flex align-items-center">
                    <span class="me-3" style="font-size:1.7rem;">
                        <i class="fa fa-envelope text-danger"></i>
                    </span>
                    <div>
                        <div class="fw-bold" style="font-size:1.15rem;">Write To US</div>
                        <div class="text-muted mt-1" style="font-size:1rem;">Fill out our form and we will contact you within 24 hours.</div>
                        <div class="mt-1" style="font-size:1rem;">Emails: customer@exclusive.com</div>
                        <div class="mt-1" style="font-size:1rem;">Emails: support@exclusive.com</div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Right Contact Form -->
        <div class="col-md-8">
            <div class="bg-white rounded-3 shadow-sm p-4">
                <form>
                    <div class="row g-3 mb-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control bg-light border-0" placeholder="Your Name *" required />
                        </div>
                        <div class="col-md-4">
                            <input type="email" class="form-control bg-light border-0" placeholder="Your Email *" required />
                        </div>
                        <div class="col-md-4">
                            <input type="text" class="form-control bg-light border-0" placeholder="Your Phone *" required />
                        </div>
                    </div>
                    <div class="mb-4">
                        <textarea class="form-control bg-light border-0" rows="6" placeholder="Your Massage" required></textarea>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-danger px-5 py-2" style="background:#e94560;border:none;font-size:1.1rem;">Send Massage</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<br>
<br>
<br>
<br>


@section Scripts {
    <!-- Add any page-specific scripts here if needed -->
} 