@{
    ViewData["Title"] = "Product Details";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-1">
        <ol class="breadcrumb bg-white px-0" style="font-size:1.3rem;">
            <li class="breadcrumb-item">
                <a href="/" style="color:#888; text-decoration:none; font-weight:300;">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a href="/Products" style="color:#888; text-decoration:none; font-weight:300;">Products</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page" style="color:#111; font-weight:400;">Product Details</li>
        </ol>
    </nav>
</div>

<section class="py-5">
    <div class="container">
        <div class="row">
            <!-- Product Images -->
            <div class="col-md-6">
                <div class="product-images">
                    <div class="main-image mb-3">
                        <img src="~/images/mainDetails.jpg" alt="Product" class="img-fluid rounded-3" style="width:100%; height:400px; object-fit:contain; background:#f5f5f5;">
                    </div>
                    <div class="thumbnail-images d-flex gap-3">
                        <img src="~/images/WhatsApp Image 2025-05-12 at 21.24.29_05e519da.jpg" alt="Thumbnail 1" class="img-fluid rounded-3" style="width:80px; height:80px; object-fit:contain; background:#f5f5f5; cursor:pointer;">
                        <img src="~/images/WhatsApp Image 2025-05-12 at 21.24.29_6e8053ab.jpg" alt="Thumbnail 2" class="img-fluid rounded-3" style="width:80px; height:80px; object-fit:contain; background:#f5f5f5; cursor:pointer;">
                        <img src="~/images/WhatsApp Image 2025-05-12 at 21.24.29_863c942b.jpg" alt="Thumbnail 3" class="img-fluid rounded-3" style="width:80px; height:80px; object-fit:contain; background:#f5f5f5; cursor:pointer;">
                        <img src="~/images/WhatsApp Image 2025-05-12 at 21.24.29_c29e69d1.jpg" alt="Thumbnail 4" class="img-fluid rounded-3" style="width:80px; height:80px; object-fit:contain; background:#f5f5f5; cursor:pointer;">
                    </div>
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-md-6">
                <div class="product-info">
                    <h1 class="fw-bold mb-3" style="font-size:2.2rem;">iPhone 14 Pro Max</h1>
                    <div class="mb-3">
                        <span class="text-warning">
                            <i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star-half-alt"></i>
                        </span>
                        <span class="text-muted ms-2" style="font-size:1.1rem;">(120 reviews)</span>
                    </div>
                    <div class="mb-4">
                        <span class="text-danger fw-bold" style="font-size:1.5rem;">$999</span>
                        <span class="text-muted text-decoration-line-through ms-2" style="font-size:1.2rem;">$1299</span>
                    </div>
                    <p class="mb-4" style="font-size:1.1rem; color:#666; line-height:1.6;">
                        Experience the future of mobile technology with the iPhone 14 Pro Max. Featuring a stunning 6.7-inch Super Retina XDR display, powerful A16 Bionic chip, and revolutionary camera system.
                    </p>
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <div class="quantity-selector d-flex align-items-center" style="border:1px solid #eee; border-radius:8px; padding:8px 16px;">
                            <button class="btn btn-link p-0" style="color:#111;"><i class="fa fa-minus"></i></button>
                            <input type="number" value="1" min="1" class="form-control border-0 text-center" style="width:60px;">
                            <button class="btn btn-link p-0" style="color:#111;"><i class="fa fa-plus"></i></button>
                        </div>
                        <button class="btn btn-danger px-4 py-2" style="background:#e94560; border:none;">
                            <i class="fa-solid fa-cart-shopping me-2"></i>Add to Cart
                        </button>
                        <button class="btn btn-outline-danger px-4 py-2" style="border:1px solid #e94560; color:#e94560;">
                            <i class="fa-regular fa-heart me-2"></i>Add to Wishlist
                        </button>
                    </div>
                    <div class="product-meta">
                        <div class="d-flex align-items-center mb-2">
                            <span class="text-muted" style="width:120px;">Availability:</span>
                            <span class="text-success">In Stock</span>
                        </div>
                        <div class="d-flex align-items-center mb-2">
                            <span class="text-muted" style="width:120px;">Category:</span>
                            <span>Phones</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <span class="text-muted" style="width:120px;">Share:</span>
                            <div class="d-flex gap-3">
                                <a href="#" class="text-muted"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" class="text-muted"><i class="fab fa-twitter"></i></a>
                                <a href="#" class="text-muted"><i class="fab fa-instagram"></i></a>
                                <a href="#" class="text-muted"><i class="fab fa-linkedin-in"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Products Section -->
        <div class="mt-5">
            <div class="d-flex align-items-center mb-4">
                <span style="display:inline-block;width:24px;height:50px;background:#e94560;border-radius:6px;margin-right:8px;"></span>
