@section Styles {
  <style>
    /* Stats Card Hover - match home page */
    .stats .card {
      transition: background 0.2s, color 0.2s, box-shadow 0.2s;
      border-radius: 1rem;
      box-shadow: 0 2px 12px rgba(233,69,96,0.08);
      border: none;
    }
    .stats .card:hover {
      background-color: #e94560 !important;
      color: #fff;
      box-shadow: 0 4px 24px rgba(233,69,96,0.10);
    }
    .stats .card:hover p,
    .stats .card:hover .icon-parent,
    .stats .card:hover .h2,
    .stats .card:hover .h5 {
      color: #fff !important;
    }
    .stats .icon-parent {
      background: #111 !important;
      border-radius: 50%;
      border: 2px solid #e94560;
      transition: background 0.2s, border 0.2s;
    }
    .stats .card:hover .icon-parent {
      background: #e94560 !important;
      border: 2px solid #fff;
    }
    /* Team Section Improvements */
    .team-card {
      border-radius: 1.5rem;
      box-shadow: 0 2px 12px rgba(233,69,96,0.08);
      border: none;
      transition: box-shadow 0.2s, transform 0.2s, background 0.2s;
      min-height: 370px;
      padding: 0 0 1.5rem 0;
      background: #fff;
    }
    .team-card:hover {
      box-shadow: 0 4px 16px rgba(233,69,96,0.12);
      transform: translateY(-2px);
      background: #fff0f3;
    }
    .team-icon {
      width: 80px;
      height: 80px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      border: 3px solid #fff;
      box-shadow: 0 2px 8px rgba(233,69,96,0.10);
      background: #f8f9fa;
      transition: all 0.3s ease;
    }
    .team-icon i {
      font-size: 2.9rem;
      color: #e94560;
      transition: all 0.3s ease;
    }
    /* .team-card:hover .team-icon {
      box-shadow: 0 2px 12px rgba(233,69,96,0.15);
      border: 3px solid #e94560;
      transform: scale(1.02);
    } */
    .team-card:hover .team-icon i {
      color: #111;
      transform: scale(1.05);
    }
    .team-name {
      color: #e94560;
      font-weight: bold;
      font-size: 1.25rem;
      letter-spacing: -0.5px;
      transition: color 0.2s;
    }
    .team-card:hover .team-name {
      color: #111;
    }
    .team-social {
      color: #e94560;
      font-size: 1.3rem;
      transition: color 0.2s, transform 0.2s;
    }
    .team-social:hover {
      color: #111;
      transform: scale(1.2);
    }
    /* Services Section */
    .service-card {
      border-radius: 1rem;
      box-shadow: 0 2px 12px rgba(233,69,96,0.08);
      border: none;
      transition: box-shadow 0.2s, background 0.2s, color 0.2s;
      background: #f8f9fa;
    }
    .service-card:hover {
      background: #e94560;
      color: #fff;
      box-shadow: 0 8px 32px rgba(233,69,96,0.18);
    }
    .service-card:hover .service-title,
    .service-card:hover p {
      color: #fff !important;
    }
    .service-icon {
      background: #e94560 !important;
      color: #fff !important;
      border-radius: 50%;
      border: 2px solid #fff;
      transition: background 0.2s, color 0.2s;
    }
    .service-card:hover .service-icon {
      background: #fff !important;
      color: #111 !important;
      border: 2px solid #e94560;
    }
    .service-card:hover .service-icon i {
      color: #111 !important;
    }
    .service-title {
      color: #e94560;
      font-weight: bold;
      transition: color 0.2s;
    }
    /* Section padding and separation */
    section {
      padding-top: 3.5rem;
      padding-bottom: 3.5rem;
    }
    .stats, .team, .services {
      margin-bottom: 0;
    }
  </style>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
} 